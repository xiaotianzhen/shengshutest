<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              tools:context="com.rongda.shengshutest.ui.fragment.HomeV2Fragment">

    <com.rongda.shengshutest.ui.widget.AutoScrollTextView
        android:id="@+id/tv_auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:textColor="@color/font_red"
        app:textSize="12sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_showtime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离  时间"
            android:textSize="16sp"
            android:textColor="@color/font_normal"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
        <View
            android:id="@+id/view_line_lef"
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:background="@color/font_normal"
            android:layout_toLeftOf="@id/tv_showtime_title"
            android:layout_centerVertical="true"/>
        <View
            android:id="@+id/view_line_rig"
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:background="@color/font_normal"
            android:layout_toRightOf="@id/tv_showtime_title"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:background="@drawable/shape_solid_black_circle"
            android:layout_alignRight="@id/view_line_lef"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:background="@drawable/shape_solid_black_circle"
            android:layout_alignLeft="@id/view_line_rig"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_limit_day"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_solid_orange_radius"
                android:gravity="center"
                android:minWidth="25dp"
                android:text="00"
                android:textColor="@color/font_white"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@id/tv_limit_day"
                android:text="天"
                android:textColor="@color/font_normal"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_limit_hour"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_solid_orange_radius"
                android:gravity="center"
                android:minWidth="25dp"
                android:text="00"
                android:textColor="@color/font_white"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@id/tv_limit_day"
                android:text="时"
                android:textColor="@color/font_normal"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_limit_min"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_solid_orange_radius"
                android:gravity="center"
                android:minWidth="25dp"
                android:text="00"
                android:textColor="@color/font_white"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@id/tv_limit_day"
                android:text="分"
                android:textColor="@color/font_normal"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_limit_second"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_solid_orange_radius"
                android:gravity="center"
                android:minWidth="25dp"
                android:text="00"
                android:textColor="@color/font_white"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_limit_day"
                android:text="秒"
                android:textColor="@color/font_normal"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
